<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | GolfStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <%= render 'layouts/header'%>
    <div id='container'>
      <div id='content'>
        <p class="notice"><%= flash[:notice] %></p>
           <%= yield %>
      </div>
      <div id='first-column'>
        <div class="loginbox">
          
           <% if user_signed_in? %>
 <div>
   <p>Hi <%= current_user.email %> <br>(<%= link_to 'Sign out', destroy_user_session_path, :method => :delete%>)</p>
 </div>
<% else %>
 <p><%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %></p>
 <% end %>
        </div>
      
      <div class="searchbox">
        <h2 class="BoxHeaders">Search Catalog</h2>
      </div>
      </div>
    </div>
  <%=render 'layouts/footer'%>  
  </body>
</html>
